<?xml version="1.0" encoding="utf-8"?>
   <!-- xml stands for extensible markup language
    it is a background code of layouts,widges etc-->
    <!--Relative layout is one of the types of layout
    It enables to specify the location of child objects relative to each other
    layout_width indicates the width of the relative layout
    layout_Height indicates the height of the relative layout
    context indicates the package name of the respective java class
    match parent will take complete height or width of text
    -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tharani.imageview.MainActivity">
    <!--Button is a widget or view
        layout_alignParentTop,layout_centerHorizontal,layout_marginTop,layout_marginLeft,
        layout_marginRight indicates the directions of text ground
        text size indicates size of text-->
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:background="@android:drawable/alert_light_frame"
        android:text="@string/click_to_open_gallery"
        android:textSize="20sp"
        />
      <!--Displays image resources, for example Bitmap or Drawable resources.
      ImageView is also commonly used to apply tints to an image and handle image scaling.
      contentDescription is a Non-textual widgets like ImageViews and ImageButtons should use this and attribute to specify a textual description of the widget
      layout_alignParentTop,layout_marginTop,layout_marginLeft,
       layout_marginRight indicates the directions of text ground-->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/click_to_open_gallery"/>
</RelativeLayout><!--relative layout ends here-->
